<%- include('partials/header.ejs') %>
<div class="container-fluid form">
<form action="/submit" method="POST">
  <div class="form-group">
    <label for="exampleFormControlInput1">Enter Heading</label>
    <input class="form-control" id="exampleFormControlInput1" name="heading">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Enter Body</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="body"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea2">Enter Notes</label>
    <textarea class="form-control" id="exampleFormControlTextarea2" rows="3" name="notes"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea3">Enter Thanks</label>
    <textarea class="form-control" id="exampleFormControlTextarea3" rows="3" name="thanks"></textarea>
  </div>
  <div class="form-group">
    <input type="submit" class= "form-control btn btn-lg new submit" value="OK">
  </div>

</form>
</div>
